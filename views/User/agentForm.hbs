<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/agent.css" />
    <title>Thêm khách sạn</title>
</head>

<body>

    <div class="layout">
        <div class="agent-container">
            <div class="agent-search">
                <p>THÊM KHÁCH SẠN</p>
                {{!-- <div class="agent-search-btn">
                    <div class="agent-search-create">Thêm khách sạn</div>
                </div> --}}
            </div>
        </div>
    </div>

    {{!-- <div class="custom-popup-overlay"> --}}
        <div class="custom-popup">
            <span class="custom-close-btn">&times;</span>
            <form id="signupForm">
                <label>Tên khách sạn</label>
                <input type="text" id="name" name="name" placeholder="Tên khách sạn *" required
                    oninvalid="this.setCustomValidity('Vui lòng nhập tên khách sạn')"
                    oninput="this.setCustomValidity('')" />
                <label>Số sao</label>
                <input type="text" id="rate" name="rate" placeholder="Đánh giá *" required
                    oninvalid="this.setCustomValidity('Vui lòng nhập đánh giá')" oninput="this.setCustomValidity('')" />
                <label>Đánh giá của người dùng</label>
                <input type="text" id="userRating" name="userRating" placeholder="Người dùng đánh giá *" required
                    oninvalid="this.setCustomValidity('Vui lòng nhập đánh giá của người dùng')"
                    oninput="this.setCustomValidity('')" />
                <label>Địa chỉ</label>
                <input type="text" id="map" name="map" placeholder="Địa chỉ *" required
                    oninvalid="this.setCustomValidity('Vui lòng nhập địa chỉ khách sạn')"
                    oninput="this.setCustomValidity('')" />

                <label>Loại phòng tiêu biểu</label>
                <input type="text" id="roomType" name="roomType" placeholder="Loại phòng *" required
                    oninvalid="this.setCustomValidity('Vui lòng nhập loại phòng')"
                    oninput="this.setCustomValidity('')" />
                <label>Trạng thái</label>
                {{!-- <input type="text" id="status" name="status" placeholder="Trạng thái *" required
                    oninvalid="this.setCustomValidity('Vui lòng nhập trạng thái')"
                    oninput="this.setCustomValidity('')" /> --}}
                <select class="form-select" name="status" id="status">
                    <option value="Còn phòng">Còn phòng</option>
                    <option value="Hết phòng">Hết phòng</option>
                    <option value="Ngưng hoạt động">Ngưng hoạt động</option>
                    <option value="Tạm nghỉ">Tạm nghỉ</option>
                </select>
                <label>Giá</label>
                <input type="text" id="cost" name="cost" placeholder="Giá *" required
                    oninvalid="this.setCustomValidity('Vui lòng nhập giá khách sạn')"
                    oninput="this.setCustomValidity('')" />
                <label>Loại</label>
                <input type="text" id="type" name="type" placeholder="Loại *" required
                    oninvalid="this.setCustomValidity('Vui lòng nhập loại')" oninput="this.setCustomValidity('')" />
                <label>Hình thức thanh toán</label>
                {{!-- <input type="text" id="payment" name="payment" placeholder="Hình thức thanh toán *" required
                    oninvalid="this.setCustomValidity('Vui lòng nhập map nhúng')"
                    oninput="this.setCustomValidity('')" /> --}}
                <select class="form-select" name="payment" id="payment">
                    <option value="online">Online</option>
                    <option value="offline">Offline</option>
                </select>
                <form action="http://localhost:3001/api/v1/hotels/createHotel" method="post"
                    enctype="multipart/form-data">
                    <input type="file" name="hotel" multiple>
                </form>

                <input type="submit" class="dkbutton" value="Đăng ký" />
            </form>
        </div>
        {{!--
    </div> --}}


</body>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script src="/js/agent.js"></script>

</html>